<p id="notice"><%= notice %></p>

<h1>Samples</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= sample.title %></td>
        <td><%= sample.body %></td>
        <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sample', new_sample_path %>
<br>
<br>

<%= content_tag :div,
                id: "resources-container",
                data: {
                    params: params,
                    resources_path: samples_path,
                }.to_json do %>
<% end %>

<% content_for :javascript do %>
  <%= javascript_pack_tag 'hello_react' %>
<% end %>
